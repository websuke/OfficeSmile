<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.officesmile.mapper.auth.AuthMapper">
    <!-- 特定のユーザーをIDで検索するSELECT文 -->
    <select id="findByAuthId" resultType="com.example.officesmile.domain.entity.auth.AuthEntity" parameterType="String">
        SELECT
            auth_id,
            password,
            authority
        FROM
            auths
        WHERE
            auth_id = #{authId}
    </select>

    <!-- 登録 -->
    <insert id="store" parameterType="com.example.officesmile.domain.entity.auth.AuthEntity">
        INSERT INTO auths (
            auth_id,
            password,
            authority
        ) VALUES (
            #{authId},
            #{password},
            #{authority}
        )
    </insert>
</mapper>
