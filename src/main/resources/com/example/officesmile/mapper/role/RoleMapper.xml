<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.officesmile.mapper.role.RoleMapper">
    <!-- ロールのプルダウン全件取得 -->
    <select id="findAll" resultType="com.example.officesmile.infrastructure.dto.RoleDTO">
        SELECT
            role_id,
            role_name
        FROM
            roles
    </select>
</mapper>